generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  //url      = "postgres://admin:test@localhost:5433/guitar-shop-catalog" // на windows при команде "npx nx run blog:db:migrate" не вводит название migrate
}

model Product {
  id           String   @id @default(uuid())
  title        String
  description  String
  addedDate    DateTime @default(now()) @map("added_date")
  imagePath    String   @map("image_path")
  guitarType   String   @map("guitar_type")
  article      String
  stringsCount Int      @map("strings_сount")
  price        Float
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@index([addedDate])
  @@index([guitarType])
  @@index([stringsCount])
  @@index([price])
  @@index([createdAt])
  @@map("products")
}
