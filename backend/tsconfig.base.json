{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@backend/account/authentication": [
        "libs/account/authentication/src/index.ts"
      ],
      "@backend/account/shop-user": [
        "libs/account/shop-user/src/index.ts"
      ],
      "@backend/account/config": [
        "libs/account/config/src/index.ts"
      ],
      "@backend/account/mail": [
        "libs/account/mail/src/index.ts"
      ],
      "@backend/api/config": [
        "libs/api/config/src/index.ts"
      ],
      "@backend/blog/blog-post": [
        "libs/blog/blog-post/src/index.ts"
      ],
      "@backend/blog/config": [
        "libs/blog/config/src/index.ts"
      ],
      "@backend/blog/models": [
        "libs/blog/models/src/index.ts"
      ],
      "@backend/file-storage/config": [
        "libs/file-storage/config/src/index.ts"
      ],
      "@backend/file-storage/file-uploader": [
        "libs/file-storage/file-uploader/src/index.ts"
      ],
      "@backend/shared/core": [
        "libs/shared/core/src/index.ts"
      ],
      "@backend/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@backend/shared/exception-filters": [
        "libs/shared/exception-filters/src/index.ts"
      ],
      "@backend/shared/helpers": [
        "libs/shared/helpers/src/index.ts"
      ],
      "@backend/shared/interceptors": [
        "libs/shared/interceptors/src/index.ts"
      ],
      "@backend/shared/pipes": [
        "libs/shared/pipes/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
